#!/bin/bash
cd ~/doc/book/
BOOK=$(fd -i "$@" | fzf -1)
if [ -z "$BOOK" ]; then
    exit
fi
FNAME="$(basename "$BOOK")"
CROPPED="../.crop/$FNAME"
echo $CROPPED
if [ -f "$CROPPED" ]; then
    nohup zathura "$CROPPED" > /dev/null 2> /dev/null &
else
    nohup zathura "$BOOK" > /dev/null 2> /dev/null &
fi

